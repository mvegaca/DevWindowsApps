<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:views="using:TheRollingStones.Views">
    <Style TargetType="views:HeroImageSection">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="views:HeroImageSection">
                    <Grid>
                        <Image HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Stretch="UniformToFill" Source="ms-appx:///Assets/The-Rolling-Stones.png" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="views:CustomVerticalHub">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="views:CustomVerticalHub">
                    <ScrollViewer VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Disabled" HorizontalScrollMode="Disabled" ZoomMode="Disabled" Margin="-16,0,-16,0">
                        <ItemsControl ItemsSource="{TemplateBinding Sections}"/>
                    </ScrollViewer>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
